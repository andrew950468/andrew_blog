<%= stylesheet_link_tag "posts" %>
<div class=form>
<%= render :partial => @post %>
<%= link_to 'Back', index_path%>
<h4>Comments</h4>
</div>

 <div class="comments">
 	<%= render :partial => @post.comments %>

<%= form_for [@post, Comment.new] do |f| %>
        <p>
                <%= f.label :body, "New comment" %><br/>
                <%= f.text_area :body %>
        </p>
        <p><%= f.submit "Add comment" %></p>
<% end %>
 </div>